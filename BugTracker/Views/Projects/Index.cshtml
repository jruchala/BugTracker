@model IEnumerable<BugTracker.Models.Project>

@{
    ViewBag.Title = "Index";
}
<br /><br/>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Projects</h2>

            @{ if (User.IsInRole("Admin") || (User.IsInRole("Project Manager")))
            {
                    <p>
                        
                        <a href="@Url.Action("Create")" role="button" class="btn btn-primary"><i class="fa fa-plus"></i>Add a Project</a>
                    </p>
                }
            }
            <table class="table">
                

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <div class="btn-group">
                               
                                <a href="@Url.Action("Edit", new { id = item.Id})" role="button" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("AssignUsers", new { id = item.Id})" role="button" class="btn btn-primary">Assign Users</a>
                                <a href="@Url.Action("Details", new { id = item.Id})" role="button" class="btn btn-primary">Details</a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" role="button" class="btn btn-primary">Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
    </div>
