@model IEnumerable<BugTracker.Models.UserRolesViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Assigned Roles List</h2>
<table class="stripe hover table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            using (Html.BeginForm("ManageRoles", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <tr>
                    <td>
                        @item.User.FirstName
                    </td>
                    <td>
                        @item.User.LastName
                        @*@item.user.Email*@
                    </td>
                    <td>
                        @foreach (var items in item.Roles)
                        {
                            @items  <span></span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-default">
                            @Html.ActionLink("Edit Roles", "EditUser", new { id = item.User.Id })
                        </button>
                    </td>

                </tr>
            }

        }
    </tbody>
</table>
@section scripts{
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <!--DataTables-->
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script>
          $('.table').DataTable();
    </script>
    <script>
      $(document).ready(function () {
          $('#multiList').multiselect();
      });
    </script>
}