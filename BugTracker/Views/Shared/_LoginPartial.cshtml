@using Microsoft.AspNet.Identity
<li>
    <a href="@Url.Action("Register", "Account")"><i class="fa fa-user fa-fw"></i>Register</a>
</li>
<li>
    <a href="@Url.Action("Index", "Manage")"><i class="fa fa-gear fa-fw"></i>Settings</a>
</li>
<li class="divider"></li>
<li>
    @if (Request.IsAuthenticated)
    {
        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i>Logout</a>
    }
    else
    {
        <a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in fa-fw"></i>Log in</a>
    }
</li>





